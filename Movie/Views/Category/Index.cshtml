@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container p-2">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="display-4">Welcome to Categories</h2>
            </div>
            <div class="col-6 text-end align-self-end ml-auto">
                <a class="btn btn-primary " asp-controller="Category" asp-action="Create">
                    <i class="bi bi-plus"></i>  Create new Category
                </a>
            </div>
        </div>
    </div>

    <table class="table table-striped table-borderless mt-3"style="width: 100%">
        <thead>
            <tr>
                <td style="width: 50%">ID</td>
                <td style="width: 30%">Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td class="btn-group btn-group-justified" role="group">
                        <a class="btn btn-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                            <i class="bi bi-pen"></i> Edit
                        </a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                            <i class="bi bi-x"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
