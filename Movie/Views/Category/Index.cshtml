@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome this is categories</h1>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create new Category</a>
    <table class="table table-striped table-bordered mt-3"style="width: 100%">
        <thead>
            <tr>
                <td style="width: 50%">ID</td>
                <td style="width: 30%">Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td><a class="btn btn-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit Category</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
