
@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
        </div>
        <div class="pb-2">
            <input type="submit" asp-controller="Category" asp-action="Create" />
        </div>
    </div>
</form>

