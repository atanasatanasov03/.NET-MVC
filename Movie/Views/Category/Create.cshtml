
@model CreateCategoryViewModel

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr />
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" id="CatName" aria-describedby="CatName" placeholder="Enter Category Name">
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" id="CatDesc" aria-describedby="CatDesc" placeholder="Enter Category Description">
        </div>

        <div class="form-group">
            <label asp-for="CatImage">Upload Category Image</label>
            <input asp-for="CatImage" type="file" class="form-control-file" id="FilmImage">
        </div>

        <div class="pb-2 mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

