@model IEnumerable<Film>
@{
    ViewData["Title"] = "Home Page";
    IEnumerable<Category> cats = ViewData["Categories"] as IEnumerable<Category>;
}

<div class="text-center">
    <div class="container p-2">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="display-4">Welcome to Movies</h2>
            </div>
            <div class="col-6 text-end align-self-end ml-auto">
                <a class="btn btn-primary " asp-controller="Movie" asp-action="Create">
                    <i class="bi bi-plus"></i>  Create new Movie
                </a>
            </div>
        </div>
    </div>
    
    <table class="table table-striped table-borderless mt-3" style="width: 100%">
        <thead>
            <tr>
                <td style="width: 30%">Created At</td>
                <td style="width: 30%">Name</td>
                <td style="width: 35%">Category</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var movie in Model)
            {
                <tr>
                    <td>@movie.CreatedDate</td>
                    <td>@movie.Name</td>
                    <td>@ViewData[movie.Name]</td>
                    <td class="btn-group btn-group-justified" role="group">
                        <a class="btn btn-secondary" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">
                            <i class="bi bi-pen"></i> Edit
                        </a>
                        <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">
                            <i class="bi bi-x"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
