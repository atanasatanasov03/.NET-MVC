@model IEnumerable<Film>
@{
    ViewData["Title"] = "Home Page";
    IEnumerable<Category> cats = ViewData["Categories"] as IEnumerable<Category>;
}

<div class="text-center">
    <h1 class="display-4">Welcome this is movies</h1>
    <a class="btn btn-primary" asp-controller="Movie" asp-action="Create">Create new Movie</a>
    <table class="table table-striped table-bordered mt-3"style="width: 100%">
        <thead>
            <tr>
                <td style="width: 30%">ID</td>
                <td style="width: 30%">Name</td>
                <td style="width: 40%">Category</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                    <td>@ViewData[movie.Name]</td>
                    <td class="btn-group" role="group">
                        <a class="btn btn-secondary" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit Movie</a>
                        <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete Movie</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
