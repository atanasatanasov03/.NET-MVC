@model IEnumerable<Film>
@{
    ViewData["Title"] = "Home Page";
    IEnumerable<Category> cats = ViewData["Categories"] as IEnumerable<Category>;
}

<div class="text-center">
    <div class="container p-2">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="display-4">Welcome to Movies</h2>
            </div>
            <div class="col-6 text-end align-self-end ml-auto">
                <a class="btn btn-primary " asp-controller="Movie" asp-action="Create">
                    <i class="bi bi-plus"></i>  Create new Movie
                </a>
            </div>
        </div>
    </div>

    <div class="width: 80%">
        @foreach(var movie in Model)
        {
            <div class="card mt-3 mb-3">
                <div class="card-body">
                    <div class="container p-2">
                        <div class="row">
                            <div class="col-6 d-inline-flex flex-row align-items-center">
                                <h4>@movie.Name</h4>
                            </div>
                            <div class="col-6 d-inline-flex flex-row-reverse">
                                <div class="btn-group">
                                    <a class="btn btn-info" asp-controller="Movie" asp-action="Single" asp-route-id="@movie.Id">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">
                                        <i class="bi bi-x"></i>
                                    </a>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--<tr>
                <td>@movie.CreatedDate</td>
